<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <RootNamespace>HelpfulUtilities.Discord.Commands</RootNamespace>
    <PackageId>HelpfulUtilities.Discord.Commands</PackageId>
    <Company>HelpfulStranger999</Company>
    <Authors>HelpfulStranger999</Authors>
    <Description>This package expands upon Helpful Utilities to provide extensions for the Discord.NET Commands library.</Description>
    <RepositoryType>Github</RepositoryType>
    <PackageReleaseNotes>- Fixes emoji type reader bug
- Adds empty service provider for libs</PackageReleaseNotes>
    <NeutralLanguage>en-US</NeutralLanguage>
    <PackageTags>discord, discordapp</PackageTags>
    <RepositoryUrl>https://github.com/HelpfulStranger999/HelpfulUtilities/tree/HelpfulUtilities/Discord.NET.Commands%20Utilities</RepositoryUrl>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.7-alpha</Version>
    <PackageProjectUrl>https://github.com/HelpfulStranger999/HelpfulUtilities/tree/HelpfulUtilities/Discord.NET.Commands Utilities</PackageProjectUrl>
    <Product>HelpfulUtilities.Discord.Commands</Product>
    <AssemblyVersion>1.0.7.0</AssemblyVersion>
    <FileVersion>1.0.7.0</FileVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Release|AnyCPU'">
    <DocumentationFile>bin\Release\netcoreapp2.0\Discord.NET.Commands Utilities.xml</DocumentationFile>
  </PropertyGroup>

  <ItemGroup>
    <Compile Remove="Nuget Packages\**" />
    <EmbeddedResource Remove="Nuget Packages\**" />
    <None Remove="Nuget Packages\**" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Discord.Net.Commands" Version="2.0.0-beta2-00936" />
    <PackageReference Include="HelpfulUtilities" Version="1.0.6-alpha" />
    <PackageReference Include="HelpfulUtilities.Discord" Version="1.0.3" />
  </ItemGroup>

  <PropertyGroup>
    <DefineConstants Condition="Exists('Discord.Addons.EmojiTools.dll') ">$(DefineConstants);EMOJI</DefineConstants>
  </PropertyGroup>

</Project>
